<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="350dp"
    android:layout_height="230dp"
    android:background="@drawable/editbox">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_medium"
        android:id="@+id/logoutitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        android:text="Authentication"
        android:drawablePadding="10dp"
        android:paddingRight="10dp"
        android:drawableStart="@drawable/pass2_icon"

        android:textColor="#3B3B3B"
        android:textSize="34sp" />




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pass"


        android:layout_below="@+id/logoutitle"


        android:fontFamily="@font/ubuntu_medium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"







        android:textColor="#525252"
        android:textSize="21sp"



        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        app:hintTextColor="@color/black"
        app:boxStrokeColor="#171717"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:inputType="textPassword"
            android:textColorHint="#1A8CFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/selectionbtns"
        android:layout_marginTop="20dp"

        android:layout_below="@+id/pass"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="16sp"
            android:backgroundTint="#1A8CFF"
           android:id="@+id/submitbtn"
            android:layout_gravity="end"
            android:layout_marginEnd="45dp"

            />


    </LinearLayout>



</RelativeLayout>