<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="350dp"
    android:layout_height="230dp"
    android:background="@drawable/logoutbackgr"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_medium"
        android:id="@+id/logoutitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        android:text="Logout"
        android:drawablePadding="10dp"
        android:paddingRight="10dp"
        android:drawableStart="@drawable/logout_iconn"

        android:textColor="#3B3B3B"
        android:textSize="36sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/logoutitle"
        android:id="@+id/logmsg"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"

        android:text="Are you sure you want to logout?"
        android:lineSpacingExtra="8dp"




        android:textColor="#525252"
        android:textSize="21sp" />




    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/selectionbtns"
        android:layout_marginTop="20dp"

        android:layout_below="@+id/logmsg"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="13sp"
            android:backgroundTint="#E94555"
           android:id="@+id/yesbtn"
            android:textColor="@color/white"

            android:layout_marginStart="60dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:id="@+id/nobtn"
            android:textSize="14sp"
            android:backgroundTint="#E94555"
            android:textColor="@color/white"
            android:layout_marginStart="45dp"



        />
    </LinearLayout>



</RelativeLayout>