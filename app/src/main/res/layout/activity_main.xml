<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/leaves"
        android:layout_width="117dp"
        android:layout_height="36dp"
        android:layout_gravity="start"
        android:layout_marginStart="35dp"

        android:contentDescription="Leave Image"
        app:srcCompat="@drawable/dryleaves" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="230dp"
            android:layout_height="136dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:contentDescription="Image of the icon"
            app:srcCompat="@drawable/clean_icon" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_italic"
            android:gravity="center"
            android:letterSpacing="0.08"
            android:text="EaseMe"
            android:textColor="#2E2E2E"
            android:textSize="34sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tagline"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu_bold"
            android:gravity="center"
            android:letterSpacing="0.08"
            android:text="Talk, Trust and Feel"
            android:textColor="#2E2E2E"
            android:textSize="15sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/leaves2"
            android:layout_width="117dp"
            android:layout_height="36dp"
            android:layout_gravity="end"
            android:layout_marginTop="-21dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dryleaves" />


    </LinearLayout>

</RelativeLayout>