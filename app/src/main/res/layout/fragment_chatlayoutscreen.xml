<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatlayoutscreen"
>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="15dp"
      >

       <TextView
           android:layout_width="wrap_content"
           android:layout_centerHorizontal="true"


           android:paddingHorizontal="10dp"
           android:paddingVertical="5dp"

           android:id="@+id/usercount"

           android:text="Helper's Available: 5"
           android:textSize="28sp"
           android:textColor="#171717"

           android:fontFamily="@font/montserrat_medium"
           android:drawablePadding="5dp"
           android:drawableStart="@drawable/medical_heart"
           android:drawableTint="#171717"
           android:layout_marginBottom="20dp"

           android:layout_height="wrap_content"/>



<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/chatrecyclerview"
    android:layout_below="@id/usercount"
    />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="20dp"
    android:orientation="horizontal"
   android:layout_alignParentBottom="true"
    android:paddingVertical="10dp"
android:id="@+id/extraschat"
    android:gravity="center">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableStart="@drawable/wait_logo"
        android:textSize="13sp"
        android:drawablePadding="3dp"
        android:fontFamily="@font/montserrat"
    android:text="Wait shortly if there are no helpers available right now"/>
</LinearLayout>
   </RelativeLayout>

</FrameLayout>